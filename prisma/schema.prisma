generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @unique
  username          String              @unique
  roles          String[]
  password          String
  fullName          String
  email             String              @unique
  isVerified        Boolean       
  createdAt         DateTime 
  deletedAt         DateTime?
  emailVerification EmailVerification[]
  sessions          Session[]
  Recovery          Recovery[]
}

model EmailVerification {
  id         String   @id @unique 
  username   String
  email      String
  secretCode String
  used       Boolean  
  createdAt  DateTime 
  expiresAt  DateTime
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

model Session {
  id           String   @id @unique
  username     String
  refreshToken String
  userAgent    String
  ip           String
  blocked      Boolean  @default(false)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

model Recovery {
  id         String   @id 
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  secretCode String   @db.VarChar(150)
  used       Boolean 
  createdAt  DateTime 
  expiresAt  DateTime

  @@map(name: "Recovery")
}
